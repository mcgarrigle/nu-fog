#cloud-config
ssh_pwauth: true
users:
  - name: ${USER}
    groups: users
    shell: /bin/bash
    sudo: ['ALL=(ALL) NOPASSWD:ALL']
    ssh_authorized_keys:
    - ${SSH_PUBLIC_KEY}
chpasswd:
  expire: false
  users:
  - { name: ${USER}, password: ${PASSWORD}, type: text }    

# configure SSH certificates

write_files:
- path: /etc/ssh/sshd_config.d/10-ssh-certs.conf
  content: "TrustedUserCAKeys /etc/ssh/ssh_ca_user_key.pub"
  owner: root:root
  permissions: '0644'
- path: /etc/ssh/ssh_ca_user_key.pub
  content: "${SSH_CA_USER_KEY}"
  owner: root:root
  permissions: '0644'
